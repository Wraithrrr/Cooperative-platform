{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/src",
            "breakOnLoad": true,
            "sourceMaps": true,
            "runtimeArgs": [
                "--disable-site-isolation-trials" // Helps with CORS in dev
            ],
            "pathMapping": {
                "/": "${workspaceFolder}/src"
            }
        }
    ]
}